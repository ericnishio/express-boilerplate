{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "description": "A modern Express boilerplate for building RESTful APIs.",
  "scripts": {
    "start": "babel-watch --watch src src/index.js",
    "debug": "DB=mongodb://localhost:27017/expressboilerplate babel-watch --watch src src/index.js --inspect",
    "build": "yarn lint && yarn test && babel src --out-dir dist --quiet",
    "test": "jest",
    "lint": "eslint src tests && flow --quiet"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-plugin-module-resolver": "^2.4.0",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-watch": "^2.0.5",
    "eslint": "^3.14.0",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-flowtype-errors": "^2.0.3",
    "eslint-plugin-jest": "^1.0.2",
    "flow-bin": "^0.38.0",
    "flow-typed": "^2.0.0",
    "http": "^0.0.0",
    "jest": "^18.1.0",
    "supertest": "^2.0.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015-node6": "^0.4.0",
    "body-parser": "^1.16.0",
    "cors": "^2.8.1",
    "dotenv": "^4.0.0",
    "express": "^4.14.0",
    "helmet": "^3.4.0",
    "mongoose": "^4.7.8"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathDirs": [
      "tests"
    ]
  }
}
