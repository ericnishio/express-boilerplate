{
  "sourceMaps": true,
  "presets": [
    "stage-0",
    "es2015-node4"
  ],
  "plugins": [
    "syntax-flow",
    "transform-flow-strip-types",
    ["module-resolver", {
      "root": ["."],
      "alias": {
        "$root": ".",
        "$src": "./src",
        "$app": "./src/app",
        "$db": "./src/db",
        "$modules": "./src/modules"
      }
    }]
  ]
}
